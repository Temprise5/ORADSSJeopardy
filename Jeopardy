<body>
    <div class="game-container">
        <div class="header">
            <h1>ðŸŽ¯ ORADSS Knowledge Challenge</h1>
            <p>Test Your Understanding of Chapters 1 & 2</p>
        </div>

        <div class="progress-bar">
            <div class="progress-fill" id="progressFill"></div>
        </div>

        <div class="scoreboard">
            <div class="score-display">
                Score: <span id="currentScore">0</span> / <span id="totalQuestions">6</span>
            </div>
            <div class="score-display">
                Question: <span id="currentQuestion">1</span> of <span id="totalQuestionsDisplay">6</span>
            </div>
        </div>

        <div class="question-container" id="questionContainer">
            <!-- Questions will be loaded here -->
        </div>

        <div class="final-score" id="finalScore">
            <div class="celebration" id="celebration"></div>
            <h2>Quiz Complete!</h2>
            <p>Your final score: <span id="finalScoreText"></span></p>
            <p id="performanceMessage"></p>
        </div>

        <div class="controls">
            <button class="btn btn-primary" id="nextBtn" onclick="nextQuestion()" disabled>Next Question</button>
            <button class="btn btn-reset" onclick="resetQuiz()">ðŸ”„ Restart Quiz</button>
        </div>
    </div>

    <script>
        const questions = [
            {
                question: "What is a Source System?",
                options: [
                    "A system where Field Users record their accomplishments",
                    "A K-Pop Band",
                    "An ORADSS Universe",
                    "An SQL Query"
                ],
                correct: 0,
                explanation: "A Source System refers to regulatory systems like FACTS, OASIS, CMS, etc. where field users record their accomplishments and activities."
            },
            {
                question: "Which of the following is not an ORADSS Object type?",
                options: [
                    "Detail",
                    "Measure",
                    "Dimension",
                    "Folder"
                ],
                correct: 3,
                explanation: "Folder is not an object type. The four ORADSS object types are: Dimensions, Details, Measures, and Pre-Defined Query Filters."
            },
            {
                question: "What is the name of the location where you save your own ORADSS Documents?",
                options: [
                    "Personal Folders",
                    "My House",
                    "My Name",
                    "Local Drive"
                ],
                correct: 0,
                explanation: "Personal Folders is where your personal documents reside, including any documents you copied from Public Folders."
            },
            {
                question: "What is the name of the ORADSS Reports that anybody can run?",
                options: [
                    "Standard Reports",
                    "Canned Reports",
                    "Packaged Reports",
                    "Bottled Reports"
                ],
                correct: 1,
                explanation: "Canned Reports are documents available for anybody with ORADSS access to run. They're found in the Public Folders."
            },
            {
                question: "You can Favorite an ORADSS Document or Folder?",
                options: [
                    "True",
                    "False"
                ],
                correct: 0,
                explanation: "True! You can favorite both documents and folders by clicking the star icon, making them easily accessible from the Favorites area."
            },
            {
                question: "What is the correct way to Log Off of ORADSS?",
                options: [
                    "Close your browser window",
                    "Click the \"Log Off\" Button",
                    "Press the power button on your computer",
                    "Pour water over your keyboard"
                ],
                correct: 1,
                explanation: "You should always log off properly by clicking your initials in the upper right corner and selecting 'Log out' to prevent multiple sessions and system slowness."
            }
        ];

        let currentQuestionIndex = 0;
        let score = 0;
        let selectedAnswer = null;
        let quizCompleted = false;

        function loadQuestion() {
            if (currentQuestionIndex >= questions.length) {
                showFinalScore();
                return;
            }

            const question = questions[currentQuestionIndex];
            const container = document.getElementById('questionContainer');
            
            container.innerHTML = `
                <div class="question-card">
                    <div class="question-number">Question ${currentQuestionIndex + 1}</div>
                    <div class="question-text">${question.question}</div>
                    <div class="options" id="options">
                        ${question.options.map((option, index) => 
                            `<div class="option" onclick="selectAnswer(${index})" data-index="${index}">
                                ${String.fromCharCode(65 + index)}. ${option}
                            </div>`
                        ).join('')}
                    </div>
                    <div class="feedback" id="feedback">
                        <strong>Explanation:</strong> ${question.explanation}
                    </div>
                </div>
            `;

            // Update progress
            updateProgress();
            updateScoreboard();
            
            // Reset state
            selectedAnswer = null;
            document.getElementById('nextBtn').disabled = true;
        }

        function selectAnswer(index) {
            if (selectedAnswer !== null) return; // Prevent multiple selections
            
            selectedAnswer = index;
            const question = questions[currentQuestionIndex];
            const options = document.querySelectorAll('.option');
            
            // Show correct/incorrect styling
            options.forEach((option, i) => {
                if (i === question.correct) {
                    option.classList.add('correct');
                } else if (i === index && i !== question.correct) {
                    option.classList.add('incorrect');
                } else if (i === index) {
                    option.classList.add('selected');
                }
                option.style.cursor = 'default';
            });

            // Update score
            if (index === question.correct) {
                score++;
                updateScoreboard();
            }

            // Show feedback
            document.getElementById('feedback').classList.add('show');
            document.getElementById('nextBtn').disabled = false;
        }

        function nextQuestion() {
            currentQuestionIndex++;
            loadQuestion();
        }

        function updateProgress() {
            const progress = ((currentQuestionIndex) / questions.length) * 100;
            document.getElementById('progressFill').style.width = progress + '%';
        }

        function updateScoreboard() {
            document.getElementById('currentScore').textContent = score;
            document.getElementById('currentQuestion').textContent = currentQuestionIndex + 1;
        }

        function showFinalScore() {
            document.getElementById('questionContainer').style.display = 'none';
            document.getElementById('nextBtn').style.display = 'none';
            
            const finalScore = document.getElementById('finalScore');
            const celebration = document.getElementById('celebration');
            const finalScoreText = document.getElementById('finalScoreText');
            const performanceMessage = document.getElementById('performanceMessage');
            
            const percentage = Math.round((score / questions.length) * 100);
            
            finalScoreText.textContent = `${score}/${questions.length} (${percentage}%)`;
            
            // Set celebration and message based on performance
            if (percentage >= 90) {
                celebration.textContent = 'ðŸŽ‰ðŸ†ðŸŽ‰';
                performanceMessage.textContent = 'Outstanding! You\'re an ORADSS expert!';
                performanceMessage.style.color = '#27ae60';
            } else if (percentage >= 70) {
                celebration.textContent = 'ðŸŽŠðŸ‘ðŸŽŠ';
                performanceMessage.textContent = 'Great job! You have a solid understanding of ORADSS!';
                performanceMessage.style.color = '#f39c12';
            } else if (percentage >= 50) {
                celebration.textContent = 'ðŸ‘ðŸ“šðŸ‘';
                performanceMessage.textContent = 'Good effort! Review the chapters and try again!';
                performanceMessage.style.color = '#3498db';
            } else {
                celebration.textContent = 'ðŸ“–ðŸ’ªðŸ“–';
                performanceMessage.textContent = 'Keep studying! You\'ll get it next time!';
                performanceMessage.style.color = '#e74c3c';
            }
            
            finalScore.classList.add('show');
            quizCompleted = true;
            
            // Update progress to 100%
            document.getElementById('progressFill').style.width = '100%';
        }

        function resetQuiz() {
            if (confirm('Are you sure you want to restart the quiz? This will reset your progress.')) {
                currentQuestionIndex = 0;
                score = 0;
                selectedAnswer = null;
                quizCompleted = false;
                
                document.getElementById('questionContainer').style.display = 'block';
                document.getElementById('nextBtn').style.display = 'inline-block';
                document.getElementById('finalScore').classList.remove('show');
                document.getElementById('progressFill').style.width = '0%';
                
                loadQuestion();
            }
        }

        // Initialize the quiz
        document.addEventListener('DOMContentLoaded', function() {
            loadQuestion();
        });

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (quizCompleted) return;
            
            // Number keys 1-4 for selecting answers
            if (e.key >= '1' && e.key <= '4') {
                const index = parseInt(e.key) - 1;
                if (index < questions[currentQuestionIndex].options.length && selectedAnswer === null) {
                    selectAnswer(index);
                }
            }
            
            // Enter or Space for next question
            if ((e.key === 'Enter' || e.key === ' ') && !document.getElementById('nextBtn').disabled) {
                e.preventDefault();
                nextQuestion();
            }
        });
    </script>
</body>
</html>
